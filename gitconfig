[push]
  default       = upstream
[color]
  ui            = auto
[alias]
  aa            = add --all
  alias         = config --get-regexp ^alias\\.
  ap            = add --patch
  b             = branch
  bb            = checkout -b
  bd            = branch -d
  bdf           = branch -D
  c             = commit
  cc            = commit -am
  ca            = commit --amend
  can           = commit -a --amend --no-edit
  cw            = commit -am "wip"
  ci            = commit -v
  co            = checkout
  dc            = diff --word-diff --cached --color-words
  df            = diff --word-diff --color-words
  djts          = ! git branch -D `git branch | grep -E 'jts-*'`
  l             = log --oneline
  ll            = log --oneline --decorate --graph --all -40
  lah           = log --oneline --decorate --graph -40
  lg            = log -E -i --grep
  ls            = log --oneline
  mup           = !git checkout main && git pull && git checkout -
  pf            = push --force-with-lease
  rup           = rebase -i main
  uncommit      = reset --soft HEAD^
  unstage       = reset
[core]
	excludesfile  = /Users/johnschoeman/.gitignore_global
  autocrlf      = input
[merge]
  ff            = only
[commit]
	template      = ~/.gitmessage
[fetch]
  prune         = true
[rebase]
  autosquash    = true
[include]
  path          = ~/.gitconfig.local
[diff]
  colorMoved    = zebra
[user]
	name          = John Schoeman
	email         = johnschoeman1617@gmail.com
[http]
	postBuffer    = 1572864000
[init]
	defaultBranch = main
