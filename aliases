###########
# ALIASES #
###########

# Unix
alias ls="ls -FGh"
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias cp="cp -iv"
alias rm="rm -iv"
alias du="du -cksh"
alias df="df -h"
alias sed="sed -E"

# Yarn
alias y="yarn install"

# Vim
alias vim="nvim"
alias vi="nvim"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# React Native
alias rns='npx react-native start'
alias rnsc='npx react-native start --resetCache'
